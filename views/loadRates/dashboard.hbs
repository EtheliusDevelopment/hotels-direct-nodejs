    {{!-- Add Dynamic Table --}}
<div class="container">
    {{#if hotels}}
    <table class="striped">
        <thead>
          <tr>
              <th>Hotel Name</th>
              <th>Property Type</th>
              <th>Country</th>
              <th>Region</th>
              <th>Province</th>
              <th>Locality</th>
              <th>Created At</th>
              <th>Rates</th>
              <th class="center">View Reservations</th>
          </tr>
        </thead>

        <tbody>
        {{#each hotels}}
          <tr>
            <td><a href="/hotel/{{_id}}">{{nameHotel}}</a></td>
            <td>{{typeHotel}}</td>
            <td>{{country}}</td>
            <td>{{region}}</td>
            <td>{{province}}</td>
            <td>{{locality}}</td>
            <td>{{formatDate createdAt 'DD MMMM  YYYY, HH:mm:ss'}}</td>
            <td class="center"><a href="/hotel/addrates/{{_id}}"><i class="material-icons">grid_on</i></a></td>
            <td class="center"><a href="/bookingList/{{_id}}"><i class="material-icons ">date_range</i></a></td>
          </tr>
        {{/each}}
        </tbody>
    </table>
    {{else}}
    
    <p>You have not created any hotel</p>

    {{/if}}
</div>
